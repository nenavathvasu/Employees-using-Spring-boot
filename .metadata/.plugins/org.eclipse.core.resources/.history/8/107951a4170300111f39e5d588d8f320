package com.sathya.Service;

import java.util.List;
import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.sathya.Model.Employee;
import com.sathya.Repository.EmployeeRepository;

@Service
public class EmployeeService {

    @Autowired
    private EmployeeRepository repository;

    // Save Employee with Salary Calculation
    public Employee saveEmployee(Employee emp) {

        double basicSalary = emp.getSalary();

        double hra = basicSalary * 0.30;
        double da  = basicSalary * 0.05;
        double pf  = basicSalary * 0.04;

        double newSalary = basicSalary + hra + da - pf;

        emp.setSalary(newSalary);

        return repository.save(emp);
    }

    // Get All Employees
    public List<Employee> getAllEmployees() {
        return repository.findAll();
    }

    // Get Employee By ID
    public Optional<Employee> getEmployeeById(Long id) {
        return repository.findById(id);
    }

    // Delete Employee
    public void deleteEmployee(Long id) {
        repository.deleteById(id);
    }
}
