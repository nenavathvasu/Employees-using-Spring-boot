package com.sathya.Service;

import java.util.List;
import java.util.Map;


import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.sathya.Exception.EmployeeNotFoundException;
import com.sathya.Model.Employee;
import com.sathya.Repository.EmployeeRepository;

@Service
public class EmployeeService {

    @Autowired
    private EmployeeRepository repository;

    // Save Employee with Salary Calculation
    public Employee saveEmployee(Employee emp) {
        double basicSalary = emp.getSalary();
        double hra = basicSalary * 0.30;
        double da  = basicSalary * 0.05;
        double pf  = basicSalary * 0.04;
        double newSalary = basicSalary + hra + da - pf;
        emp.setSalary(newSalary);
        return repository.save(emp);
    }

    // Save All
    public List<Employee> SaveAllEmployee(List<Employee> emp) {
        return repository.saveAll(emp);
    }

    // Get By ID
    public Employee getEmployeeById(Long id) {
        return repository.findById(id)
                .orElseThrow(() ->
                        new EmployeeNotFoundException("Employeee is not available " + id));
    }

    // Get All
    public List<Employee> getAllEmployees() {
        return repository.findAll();
    }

    // Delete By ID
    public void deleteEmployeeById(Long id) {
        if (repository.existsById(id)) {
            repository.deleteById(id);
        } else {
            throw new EmployeeNotFoundException("Employee Not Found " + id);
        }
    }

    // Delete All
    public void deleteAllEmployees() {
        if (repository.count() == 0) {
            throw new EmployeeNotFoundException("No employees present to delete");
        }
        repository.deleteAll();
    }

    // PUT
    public Employee updateEmployee(Long id, Employee newEmp) {
        Employee emp = getEmployeeById(id);
        emp.setName(newEmp.getName());
        emp.setDepartment(newEmp.getDepartment());
        emp.setSalary(newEmp.getSalary());
        return repository.save(emp);
    }

    // PATCH
    public Employee partialUpdate(Long id, Map<String, Object> updates) {
        Employee emp = getEmployeeById(id);
        updates.forEach((key, value) -> {
            switch (key) {
                case "name":
                    emp.setName((String) value);
                    break;
                case "department":
                    emp.setDepartment((String) value);
                    break;
                case "salary":
                    emp.setSalary(Double.parseDouble(value.toString()));
                    break;
                default:
                    throw new IllegalArgumentException("Invalid field: " + key);
            }
        });
        return repository.save(emp);
    }

    // Salary filters
    public List<Employee> getMinSalary(double minSalary) {
        return repository.findBySalaryGreaterThanEqual(minSalary);
    }

    public List<Employee> getMaxSalary(double maxSalary) {
        return repository.findBySalaryLessThanEqual(maxSalary);
    }

    public List<Employee> getSalaryBetween(double min, double max) {
        return repository.findBySalaryBetween(min, max);
    }

    // Email
    public Employee getByEmail(String email) {
        return repository.findByEmail(email)
                .orElseThrow(() ->
                        new EmployeeNotFoundException("Employee not found with email " + email));
    }

    // Gender & Salary
    public List<Employee> getSalaryGreaterOrGender(double salary, String gender) {
        return repository.findBySalaryGreaterThanOrGender(salary, gender);
    }

    public List<Employee> getGenderAndMinSalary(String gender, double minSalary) {
        return repository.findByGenderAndSalaryGreaterThan(gender, minSalary);
    }

    public List<Employee> getGenderOrSalaryBetween(String gender, double min, double max) {
        return repository.findByGenderOrSalaryBetween(gender, min, max);
    }

    // Sorting
    public List<Employee> getSalaryAsc() {
        return repository.findAllByOrderBySalaryAsc();
    }

    public List<Employee> getSalaryDesc() {
        return repository.findAllByOrderBySalaryDesc();
    }

    // Name
    public List<Employee> getByNameIgnoreCase(String name) {
        return repository.findByNameIgnoreCase(name);
    }

    public List<Employee> getByNameContaining(String keyword) {
        return repository.findByNameContaining(keyword);
    }
}
